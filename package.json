{
  "name": "showy-naive-starter",
  "type": "module",
  "version": "0.1.0-alpha",
  "private": true,
  "packageManager": "pnpm@9.9.0",
  "description": "An admin dashboard UI template based on Vue 3, Vite, Naive UI, and UnoCSS. 基于 Vue 3、Vite、Naive UI 和 UnoCSS 的管理后台UI模板。",
  "author": "lileyzhao@gmail.com",
  "license": "MIT",
  "homepage": "https://github.com/lileyzhao/showy-naive-starter",
  "repository": {
    "url": "https://github.com/lileyzhao/showy-naive-starter.git"
  },
  "bugs": {
    "url": "https://github.com/lileyzhao/showy-naive-starter/issues"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "website": "https://naive-template.git.showyou.dev",
  "scripts": {
    "dev": "pnpm vite",
    "build": "pnpm vite build",
    "build:docker": "vite build --mode docker",
    "preview": "pnpm run build && vite preview",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "lint:view": "npx eslint-flat-config-viewer",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "dependencies": {
    "@unocss/reset": "^0.62.3",
    "@vueuse/core": "^11.0.3",
    "pinia": "^2.2.2",
    "vue": "^3.5.3",
    "vue-i18n": "^9.14.0",
    "vue-router": "^4.4.3"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.4.1",
    "@commitlint/cli": "^19.4.1",
    "@commitlint/config-conventional": "^19.4.1",
    "@iconify-json/carbon": "^1.2.1",
    "@iconify-json/line-md": "^1.2.1",
    "@intlify/unplugin-vue-i18n": "^4.0.0",
    "@types/node": "^22.5.4",
    "@unocss/eslint-config": "^0.62.3",
    "@unocss/preset-rem-to-px": "^0.62.3",
    "@vitejs/plugin-vue": "^5.1.3",
    "eslint": "^9.10.0",
    "eslint-plugin-format": "^0.1.2",
    "husky": "^9.1.5",
    "lint-staged": "^15.2.10",
    "naive-ui": "^2.39.0",
    "picocolors": "^1.1.0",
    "sass": "^1.78.0",
    "typescript": "^5.5.4",
    "unocss": "^0.62.3",
    "unplugin-auto-import": "^0.18.2",
    "unplugin-vue-components": "^0.27.4",
    "vite": "^5.4.3",
    "vite-plugin-progress": "^0.0.7",
    "vite-plugin-vue-devtools": "^7.4.4",
    "vue-tsc": "^2.1.6"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "*.vue": [
      "eslint --fix"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "feat",
          "fix",
          "docs",
          "style",
          "refactor",
          "perf",
          "test",
          "build",
          "ci",
          "chore",
          "revert"
        ]
      ],
      "subject-full-stop": [
        2,
        "never",
        "/[.!?,;。！？，；]$/"
      ],
      "header-max-length": [
        2,
        "always",
        80
      ]
    }
  }
}
