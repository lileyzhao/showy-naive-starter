{
  "name": "showy-naive-template",
  "type": "module",
  "version": "0.1.0-alpha",
  "private": true,
  "packageManager": "pnpm@9.6.0",
  "description": "An admin dashboard UI template based on Vue 3, Vite, Naive UI, and UnoCSS. 基于 Vue 3、Vite、Naive UI 和 UnoCSS 的管理后台UI模板。",
  "author": "lileyzhao@gmail.com",
  "license": "MIT",
  "homepage": "https://github.com/lileyzhao/showy-naive-template",
  "repository": {
    "url": "https://github.com/lileyzhao/showy-naive-template.git"
  },
  "bugs": {
    "url": "https://github.com/lileyzhao/showy-naive-template/issues"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "website": "https://naive-template.git.showyou.dev",
  "scripts": {
    "dev": "pnpm vite",
    "build": "pnpm vite build",
    "build:docker": "vite build --mode docker",
    "preview": "pnpm run build && vite preview",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "lint:view": "npx eslint-flat-config-viewer",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "dependencies": {
    "@unocss/reset": "^0.61.9",
    "@vueuse/core": "^10.11.0",
    "chalk": "^5.3.0",
    "pinia": "^2.2.0",
    "vue": "^3.4.35",
    "vue-i18n": "^9.13.1",
    "vue-router": "^4.4.2"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.24.1",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@iconify-json/carbon": "^1.1.36",
    "@iconify-json/line-md": "^1.1.38",
    "@intlify/unplugin-vue-i18n": "^4.0.0",
    "@types/node": "^22.0.2",
    "@unocss/eslint-config": "^0.61.9",
    "@unocss/preset-rem-to-px": "^0.61.9",
    "@vitejs/plugin-vue": "^5.1.1",
    "cz-git": "^1.9.4",
    "czg": "^1.9.4",
    "eslint": "^8.57.0",
    "eslint-plugin-format": "^0.1.2",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.7",
    "naive-ui": "^2.39.0",
    "sass": "^1.77.8",
    "typescript": "^5.5.4",
    "unocss": "^0.61.9",
    "unplugin-auto-import": "^0.18.2",
    "unplugin-vue-components": "^0.27.3",
    "vite": "^5.3.5",
    "vite-plugin-vue-devtools": "^7.3.7",
    "vue-tsc": "^2.0.29"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "*.vue": [
      "eslint --fix"
    ]
  }
}
